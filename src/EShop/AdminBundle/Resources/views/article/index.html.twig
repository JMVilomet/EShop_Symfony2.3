{% extends '::base.admin.html.twig' %}

{% block title %}{{parent()}} - Admin{% endblock %}
{% block context %}{{parent()}} - Admin{% endblock %}

{% block content %}
    <div id="content" class="col-md-12">
    <h3>Contenu du catalogue</h3>
    <div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>Puht</th>
                <th>Stock</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Enligne</th>
                <th>Date_ajout</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.designation }}</td>
                <td>{{ entity.puht }}</td>
                <td>{{ entity.stock }}</td>
                <td>{{ entity.description }}</td>
                <td><img src="{{ entity.photo }}" width="100%"/></td>
                <td>{%if entity.enligne %}Oui{%else%}Non{%endif%}</td>
                <td>{% if entity.dateajout %}{{ entity.dateajout|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td align="center">
                    <a href="{{ path('article_show', { 'id': entity.id }) }}" class="button">Voir</a><br>
                    <a href="{{ path('article_edit', { 'id': entity.id }) }}" class="button">Editer</a>
                </td>
            </tr>
            
        {% endfor %}
        </tbody>
    </table>
    </div>    
        <p><a href="{{ path('article_new') }}" class="button buttonBig">Ajouter un nouvel article</a></p>
        <br/>
        <p><a href="{{ path('e_shop_admin_homepage') }}" class="button buttonBig">Retour Ã  l'accueil</a></p>
        
</div>                
    {% endblock %}
